<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout" 
    xmlns:uxap="sap.uxap"
    xmlns:core="sap.ui.core">
    <Dialog 
        id="empDialog"
        class="sapUiSizeCompact"
        title="사원정보 등록"
        contentWidth="400px">
        <content>  
            <VBox class="sapUiSmallMargin">
                <form:SimpleForm
                    layout="ResponsiveGridLayout">
                    <form:content>
                        <VBox class="sapUiTinyMarginTopBottom">
                            <Label text="부서:" required="true"/> 
                            <Select id="input1" selectedKey="{/department}" items="{/department}" required="true">
                                <core:Item text="개발" key="{type}"></core:Item>
                                <core:Item text="인사" key="{type}"></core:Item>
                                <core:Item text="영업" key="{type}"></core:Item>
                            </Select>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>

                        <VBox class="sapUiTinyMarginTopBottom">
                            <Label text="직급:" required="true"/> 
                            <Select  id="input2" selectedKey="{/department>position}" items="{/position}" required="true">
                                <core:Item text="{type}" key="{type}"></core:Item>
                            </Select>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>

                        <VBox>
                            <Label text="성명:" required="true"/> 
                            <MaskInput id="input3" mask="_" placehodlerSymbol="" placehodler="이름">
                                <rules>
                                    <MaskInputRule regex="[^0-9]" />
                                </rules>
                            </MaskInput>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>

                        <VBox>
                            <Label text="사번:" required="true"/> 
                            <Input id="input4" placeholder="*****">
                                <suggestionItems>
                                    <core:Item text="itemName" />
                                </suggestionItems>
                            </Input>
                        </VBox>
                        
                        <VBox>
                            <Label text="입사일:" required="true"/> 
                            <DatePicker id="input5" name="" placeholder="YYYY-MM-DD" value="" valueStateText="" width="">
                            </DatePicker>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>

                        <VBox>
                            <Label text="담당업무:" required="true"/> 
                            <TextArea id="input6" value="{employee>/task}" valueLiveUpdate="{employee>/task}"/>
                        </VBox>

                        <VBox>
                            <Label text="연락처:" required="true"/> 
                            <MaskInput  id="input7" mask="999-9999-9999" placeholderSymbol="_" placeholder="번호를 입력해 주세요"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>

                        <VBox>
                            <Label text="이메일:" required="true"/> 
                            <Input id="input8" placeholder="">
                                <suggestionItems>
                                    <core:Item text="itemName" />
                                </suggestionItems>
                            </Input> 
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData> 
                        </VBox>
                    </form:content>
                </form:SimpleForm>
            </VBox>       
        </content>
        <beginButton>
            <Button text="추가"  type="Emphasized" press=".onCreateEmployee"/>
        </beginButton>
        <endButton>
            <Button text="취소" type="Transparent" press=".onCancelEmployee"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>