<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		id="filter"
		confirm=".onConfirmOrderDialog"
		title="정렬">
        <filterItems>
            <ViewSettingsFilterItem text="부서" key="department" >
                <items>
                    <ViewSettingsItem text="개발" key="department___EQ___개발___X" />
                    <ViewSettingsItem text="인사" key="department___EQ___인사___X" />
                    <ViewSettingsItem text="영업" key="department___EQ___영업___X" />
                </items>
            </ViewSettingsFilterItem>
            <ViewSettingsFilterItem text="직급" key="position" >
                <items>
                    <ViewSettingsItem text="상무" key="position___EQ___상무___X" />
                    <ViewSettingsItem text="이사" key="position___EQ___이사___X" />
                    <ViewSettingsItem text="과장" key="position___EQ___과장___X" />
                    <ViewSettingsItem text="주임" key="position___EQ___주임___X" />
                    <ViewSettingsItem text="사원" key="position___EQ___사원___X" />
                </items>
            </ViewSettingsFilterItem>
            <!-- <ViewSettingsFilterItem text="입사일" key="hiredDate" >
                <items>
                    <ViewSettingsItem text="" key="" />
                    <ViewSettingsItem text="" key="" />
                    <ViewSettingsItem text="" key="" />
                </items>
            </ViewSettingsFilterItem> -->
        </filterItems>

		<sortItems>
            <ViewSettingsItem text="부서" key="department" selected="true"/>
            <ViewSettingsItem text="직급" key="position"/>
            <ViewSettingsItem text="성명" key="name"/>
            <ViewSettingsItem text="사번" key="id"/>
            <ViewSettingsItem text="연락처" key="phoneNumber"/>
            <ViewSettingsItem text="이메일" key="email"/>
		</sortItems>

        <groupItems>
            <ViewSettingsItem text="부서" key="department" selected="true" />
            <ViewSettingsItem text="직급" key="position" />
            <ViewSettingsItem text="입사일" key="hiredDate" />
        </groupItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>